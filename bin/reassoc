#!/bin/sh
#
# Forcefully reassociate DEV on different networks
#
. ./wpa.info
set -x

down() {
  sudo ip route flush table main
  sudo iptables -F
  sudo ip link set $1 down
  sudo ifconfig $1 0.0.0.0
}
if [ $# -eq 0 ]; then
  down eth0
  down $DEV
fi

sudo dhclient -r $DEV
sudo pkill dhclient
sudo dhclient -v $DEV
